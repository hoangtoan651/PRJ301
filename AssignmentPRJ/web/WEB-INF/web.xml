<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>ControllerLogin</servlet-name>
        <servlet-class>controller.ControllerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerRegister</servlet-name>
        <servlet-class>controller.ControllerRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSchedule</servlet-name>
        <servlet-class>controller.ControllerSchedule</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomeController</servlet-name>
        <servlet-class>controller.HomeController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerLogout</servlet-name>
        <servlet-class>controller.ControllerLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TakeAttendController</servlet-name>
        <servlet-class>controller.TakeAttendController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSchedule</servlet-name>
        <url-pattern>/Schedule</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerHome</servlet-name>
        <servlet-class>controller.ControllerHome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerLogOut</servlet-name>
        <servlet-class>controller.ControllerLogOut</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerTakeAttend</servlet-name>
        <servlet-class>controller.ControllerTakeAttend</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateStatus</servlet-name>
        <servlet-class>controller.UpdateStatus</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Transcript</servlet-name>
        <url-pattern>/Transcript</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSchedule</servlet-name>
        <url-pattern>/Schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomeController</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TakeAttendController</servlet-name>
        <url-pattern>/attend</url-pattern>
    </servlet-mapping>
</web-app>
