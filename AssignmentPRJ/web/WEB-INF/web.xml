<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ControllerLogin</servlet-name>
        <servlet-class>controller.ControllerLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerRegister</servlet-name>
        <servlet-class>controller.ControllerRegister</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerSchedule</servlet-name>
        <servlet-class>controller.ControllerSchedule</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerLogout</servlet-name>
        <servlet-class>controller.ControllerLogout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ControllerAttend</servlet-name>
        <servlet-class>controller.TakeAttendController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerLogin</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerRegister</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerSchedule</servlet-name>
        <url-pattern>/Schedule</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerLogout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ControllerAttend</servlet-name>
        <url-pattern>/attend</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
